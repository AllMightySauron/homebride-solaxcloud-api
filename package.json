{
  "private": false,
  "displayName": "Homebridge Solax Cloud API",
  "name": "homebridge-solaxcloud-api",
  "version": "2.2.1-beta.0",
  "description": "Integrates solar production info using public Solax/QCells Cloud API into Homebridge accessories.",
  "license": "Apache-2.0",
  "repository": {
