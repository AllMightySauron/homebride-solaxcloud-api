{
  "pluginAlias": "SolaxCloudAPI",
  "pluginType": "platform",
  "singular": false,
  "headerDisplay": "This Homebridge plugin uses Solax API service to obtain real-time info of your inverters.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Inverter name",
        "type": "string",
        "required": true,
        "description": "Inverter name for description purposes.",
        "default": "My Solax Inverter",
        "minLength": 1,
        "maxLength": 30
      },
      "tokenId": {
        "title": "TokenID from Solax",
        "type": "string",
        "required": true,
        "description": "Users get information from Solax Cloud through the granted tokenID. Please obtain your tokenID on the API page of Solax Cloud.",
        "default": "20200722185111234567890",
        "minLength": 23,
        "maxLength": 23
      },
      "sn": {
        "title": "Registration No. (module SN)",
        "type": "string",
        "required": true,
        "description": "Registration No. (inverter module SN)",
        "default": "ABCDEFGHIJ",
        "minLength": 10,
        "maxLength": 10
      },
      "pollingFrequency": {
          "title": "Polling frequency (seconds)",
          "type": "integer",
          "required": false,
          "default": 300,
          "oneOf": [
            { "title": "300 (5 minutes)", "enum": [ 300 ] },
            { "title": "600 (10 minutes)", "enum": [ 600 ] },
            { "title": "900 (15 minutes)", "enum": [ 900 ] }
          ],
          "description": "Plugin data polling frequency from Solax Cloud in seconds."
      }
    }
  }
}